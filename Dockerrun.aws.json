{
    "AWSEBDockerrunversion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "raditr/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "worker",
            "image": "raditr/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "server",
            "image": "raditr/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "raditr/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ], 
        }
    ]
}